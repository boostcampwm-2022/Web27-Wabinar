{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "typeRoots": ["../node_modules/@types", "./@types"],
    "rootDir": ".",
    "outDir": "./dist"
  }
}
