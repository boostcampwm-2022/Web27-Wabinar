{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@apis/*": ["apis/*"],
      "@config": ["config"],
      "@constants/*": ["constants/*"],
      "@errors/*": ["errors/*"],
      "@db": ["db"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@socket": ["socket"]
    }
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "require": [
      "typescript-transform-paths/register",
      "tsconfig-paths/register"
    ]
  }
}
