{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@apis/*": ["apis/*"],
      "@config": ["config"],
      "@constants/*": ["constants/*"],
      "@errors/*": ["errors/*"],
      "@db": ["db"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@socket": ["socket"],
      "@wabinar/crdt": ["../@wabinar/crdt"],
      "@wabinar/api-types": ["../@wabinar/api-types"]
    }
  },
  "plugins": [
    {
      "transform": "typescript-transform-paths",
      "afterDeclarations": true
    }
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "require": [
      "typescript-transform-paths/register",
      "tsconfig-paths/register"
    ]
  }
}
